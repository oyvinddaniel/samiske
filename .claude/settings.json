{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'if grep -rE \"(sk_live|sb_secret|service_role)\" --include=\"*.ts\" --include=\"*.tsx\" src/ 2>/dev/null | grep -v node_modules; then echo \"BLOKKERT: Fant mulige secrets\" >&2; exit 2; fi'",
            "timeout": 10000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit(*.tsx)|Edit(*.ts)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint --silent 2>&1 | head -20 || true",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
